import java.util.*;

public class Solution {
	public static long evenSumTillN(int n) {
		long sum = 0;
		
		for(int i = 1; i <= n; i++) {
			if(i % 2 == 0) {
				sum += i;
			}
		}
		return sum;
	}

	public static void main(String args[]) {
		long sum;
		Scanner sc = new Scanner(System.in);
	  int n = sc.nextInt();
		sum = evenSumTillN(n);
    System.out.println(sum);
	}
}
